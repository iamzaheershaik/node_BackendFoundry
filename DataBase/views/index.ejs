<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Manager</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

<div class="bento-container">

  <div class="bento-card form-card">
    <h2>â• Add Student</h2>

    <form action="/add-student" method="POST" class="student-form">
      <input name="firstName" placeholder="First Name" required>
      <input name="lastName" placeholder="Last Name" required>
      <input name="email" type="email" placeholder="Email Address" required>
      <input name="course" placeholder="Course Name" required>
      <input name="mobileNo" type="tel" placeholder="Mobile No" required>
      <button type="submit">Add Student</button>
    </form>
  </div>

  <div class="bento-card search-card">
    <h2>ğŸ” Search</h2>
    <form method="GET" style="display: flex; gap: 10px;">
      <input name="search" placeholder="Search by name, email, or course..." style="flex-grow:1;">
      <button style="width: auto; padding: 0 25px;">Search</button>
    </form>
  </div>

  <div class="bento-card table-card">
    <h2>ğŸ“‹ Student List</h2>

    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Course</th>
          <th>Mobile</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% if(students.length > 0) { %>
          <% students.forEach((student, i) => { %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= student.firstName %> <%= student.lastName %></td>
            <td><%= student.email %></td>
            <td><%= student.course %></td>
            <td><%= student.mobileNo %></td>

            <td class="actions">
              <a href="/edit-student/<%= student._id %>" class="icon-btn edit" title="Edit">
                âœï¸
              </a>

              <form action="/delete-student/<%= student._id %>" method="POST" style="margin:0;">
                <button class="icon-btn delete" onclick="return confirm('Are you sure you want to delete this student?')" title="Delete">
                  ğŸ—‘
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="6" style="text-align:center; padding: 30px; color: #64748b;">
              No students found. Add one to get started!
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

  </div>

</div>

</body>
</html>


